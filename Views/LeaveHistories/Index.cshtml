@model IEnumerable<IT_Norr.Models.LeaveHistory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Leave history by employee</h3>

<h1></h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.Leave.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leave.RequestStatus)
            </th>          

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.Leave.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Leave.RequestStatus)
                </td>
                

                <td>                    
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>



